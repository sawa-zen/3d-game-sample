{
  "scripts": {
    "start": "npm run watch & npm run lite",
    "lite": "lite-server",
    "build": "npm run build:js && npm run build:sass",
    "build:js": "browserify src/js/ZenDash.js -t babelify -d -o public/js/zendash.js",
    "build:sass": "node-sass src/sass --output public/css",
    "watch": "npm run watch:js & npm run watch:sass",
    "watch:sass": "node-sass src/sass --output public/css -w",
    "watch:js": "watchify src/js/ZenDash.js -t babelify -d -o public/js/zendash.js",
    "postinstall": "npm run build"
  },
  "devDependencies": {
    "babel": "^6.23.0",
    "babel-cli": "^6.24.1",
    "babel-plugin-glslify": "^2.0.0",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "babelify": "^7.3.0",
    "browserify": "^13.3.0",
    "lite-server": "^2.3.0",
    "node-sass": "^4.5.3",
    "watchify": "^3.9.0"
  },
  "dependencies": {
    "glslify": "^6.1.0",
    "lodash": "^4.17.4",
    "preloader": "^2.2.1",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "stats.js": "^0.17.0",
    "three": "^0.85.2",
    "tween.js": "^16.6.0",
    "utsuroi": "^0.1.11",
    "zenpad.js": "^0.1.12"
  }
}
